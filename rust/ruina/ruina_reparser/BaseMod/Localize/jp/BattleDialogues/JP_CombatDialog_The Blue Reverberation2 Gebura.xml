<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>The Blue Reverberation2 Gebura</GroupName>
  <Character ID="G_T_Tanya">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">どれ……赤い霧の力がどれほどなのか見物と行くか。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">まぁ……止められるまで耐えてみればいいんじゃないか。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">正しい力の向きというのがどういうものか、少しは分かったか？</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……力で負けたんだし、特に言うことはないな。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH" />
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">勝手にくたばってれば良いんじゃないか？</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">ほぉ……弱っちいやつらばっかりだな。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_2">そんな力で止めるって？</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_3">完全に烏合の衆だな……。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_4">凄いやつらを壊すときの面白みが全く無いな。</BattleDialog>
    </Type>
  </Character>
  <Character ID="G_T_Gebura">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……ああ。今まで通りやろう。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY" />
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……お前たちなら上手くやれるって信じてるから。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">今更止まれないだろ。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">…じっくり好機を狙え。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">あいつの犠牲を無駄にはしない。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_3">不要な感情は捨てよう。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">どれだけ貴重な結果なのか深く心に刻んでおけ。</BattleDialog>
    </Type>
  </Character>
  <Character ID="G_T_Librarian_1">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">よし。ゲブラーさん！そろそろ始めますか？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY" />
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">立つんだ……まだ終わったわけじゃないから。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">怒りは冷まして、そうやって前に進まないと。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">今はお互いを信じるしか！</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">……やった！出来るって言ったろ。ね？</BattleDialog>
    </Type>
  </Character>
  <Character ID="G_T_Librarian_2">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……うん、大体は。震えてないって言ったら嘘になるけど。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY" />
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">それでも力の届くところまでは……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">過去の痛みと鍛錬が今の体を作ったんだ……。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">…落ち着こう。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">もう少しだけ耐えよう……もう少しだけ。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">…みんなで防いであんなに耐えられるだなんて。</BattleDialog>
    </Type>
  </Character>
  <Character ID="G_T_Librarian_3">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">もちろん。……みんな準備はいい？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY" />
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">なんとかしようと思ったのに……ごめん。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">1人だけなのに勢いが……。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">でも、やるべきことはやらないと……。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">まだ……危なくはない。大丈夫。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">化け物が……。</BattleDialog>
    </Type>
  </Character>
  <Character ID="G_T_Librarian_4">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">ゲブラーさんだけに頼らないようにしよう。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY" />
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">最後まで戦わなきゃ……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">まだ立ってられる……。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">何か方法があるか…考えないと……。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">……本当にどうにか出来るのかな？</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">こんな力を持っているだなんて……。</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>