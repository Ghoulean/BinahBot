<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>RedMist</GroupName>
  <Character ID="RedMist_MeetBinah">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……雰囲気が尋常じゃないな。何者なんだ？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">どうして私を知ったふうな口してんだ？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……決して、手強くないとは言えなかった。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">……頼む。より能く敵を引き裂く力を。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">本格的に始めよう。全部壊してやるよ……。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">あの力は…特異点か…油断したか…。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……こんなところに、あんな力を持つやつがいるって？</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetGebura">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……これは何の悪ふざけだ？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">たちが悪いな。わざと姿を変えたのか？</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">技量が私に追いつけるのか見させてもらおうか……。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……ちょっとは私に似てると思ったけど、ただの下手な物真似だったな。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">これからが本番だ……。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">止まれない……。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">クソッ…全部壊してやる……。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">私と似た動き…一体……。</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetRoland">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">お前たちが試練を与える者か？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">敵の力がどれくらいなのか把握するのが先決だろうな……。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">お前もフィクサーなのか？それとも組織か？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">お前らも威勢だけは良い類のやつらだったな。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">ああ…お前たちの実力はよく分かった。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">……お互い大切なものを上手く守ってみようか。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">……！クソッ、隙を見せちまった……。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">わけも分かんないやつらに負けられ……。</BattleDialog>
    </Type>
  </Character>
  <Character ID="Binah_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">自分の躰に気を遣う様にしなさい。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">あれまぁ……こんな風に出逢えて新しい感慨に浸れるとは。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">共に行じて呉れるのは殊勝だが、余り無理はしないようにな。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……砕けよ。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">退きなさい。お前たちの出る幕では無い様だね。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">未だ危険な様だね。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">ああ。あの子の力を食い止めるには無理が有ったようだね。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_3">未だ完全に終った訳では無いだろうよ？</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">興味深いな。随分前からその力を扱えたのか……。</BattleDialog>
    </Type>
  </Character>
  <Character ID="Gebura_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">過去の……私か。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">私が１番良く知ってる人でもあり、知らない人でも有る。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">過去といっても変わりは無いだろう。お前ら、私の戦闘方式はちゃんと分かってるよな？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">あんまりスッキリしないなぁ。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……ああ。あれの性能は無視できなかったな。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">怖がるな。勝てるって信じなきゃ駄目だ。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">勢いで押されたら負けるんだ。へたり込むな。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">私たちでも十分やれる。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">あの鎧だったな。皆を守るための……。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">壊し方があるはずだ。尻込みはするな。</BattleDialog>
    </Type>
  </Character>
  <Character ID="Roland_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">過去の赤い霧か…実感が湧かないなぁ。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……本当にムチャクチャな力だな。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">やっぱり敵わないのか……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">まだ無理はないな。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">残り人数も十分だ。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">……落ち着こうか。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">ちょっと肩慣らししたってことか……。</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>