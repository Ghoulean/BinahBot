<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>SevenAssociation</GroupName>
  <Character ID="Dante">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">準備しろ。でも焦るなよ。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">足は引っ張るな。分かってるな？</BattleDialog>
     <BattleDialog ID="START_BATTLE_2">ボーッと突っ立ってんじゃねぇ！集中力が命綱って知らないのか？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">都市悪夢にしては情けない実力だな……。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">あり得ない……私が……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">情報を探ることにそれだけの対価が必要だというのか。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">立て！お前も同じ目に遭いたいのか？</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">……やっぱり簡単に差し出してくれる気はないみたいだな。</BattleDialog>
    </Type>
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">緊張を解いてはいけない。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">まぁ、試練って大げさに言ってたけど……。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_2">呆気ないなぁ。お前らもさっさと片付けられないのか？</BattleDialog>
    </Type>
  </Character>

  <Character ID="SevenFixers">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">本当に翼に関する上等な情報を得られるんだよね？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">この件で成功したら大昇進も望めそうだね。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">いくら貴重な情報とはいえ…命を懸けてでも手に入れないといけないの……？</BattleDialog>
      <BattleDialog ID="START_BATTLE_3">上手くやれば3課が大きな援助が得られるかも？</BattleDialog>
      <BattleDialog ID="START_BATTLE_4">とりあえずは戦いに集中しようか……。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">これで協会の援助でもちょっとは得られるかな……。</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_1">帰って終わらせようか。</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_2">上に出す報告書は後で書こう…ただでさえ疲れてるってのに。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">こんな風に…死ぬつもりはなかったのに。</BattleDialog>
      <BattleDialog ID="DEATH_1">死にたくない…こんなところに来たせいで……！</BattleDialog>
      <BattleDialog ID="DEATH_2">やっぱり無謀だったんだ……。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">……そう易々と差し出してはくれないみたいだね。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">ただ、役割を果たしただけだよ。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">いつまでこういうのを見てたらちょっとは人生良くなるんだよ。</BattleDialog>
    </Type>
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">むやみに飛びかかってくるからそうなるんだよ。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">本当に安直なやつだな。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_2">任務、簡単に終わりそうだな。</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>