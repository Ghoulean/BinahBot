<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>RedMist</GroupName>
  <Character ID="RedMist_MeetBinah">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……氣氛不太尋常。怎麼回事？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">你的語氣怎麼說得好像我們認識？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……來者不善。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">……拜託了。給我更多能撕碎敵人的力量。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">該用上真本事了。我會擊垮你們……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">那種力量……是奇點嗎……？大意了……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……這地方怎會有操控那種力量的傢伙？</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetGebura">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……這是什麼鬼？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">真是惡劣。你是刻意改變了外貌嗎？</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">有本事就跟上我……</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……乍看之下還挺像我的，但也只是個蹩腳的仿冒品罷了。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">現在才正要開始……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">我不能止步於此……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">媽的……統統砸爛……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">和我相仿的行動……你到底……</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetRoland">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">你們就是所謂的試煉嗎？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">首先要摸清敵人的深淺……</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">你們也是收尾人？還是混幫派的？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">到頭來你們也是一幫裝模做樣的傢伙。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">原來如此……我已經摸透你們的實力了。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">……讓我們拚盡全力守護彼此珍重的事物吧。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">……！靠，有破綻……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">輸給一幫莫名其妙的傢伙……</BattleDialog>
    </Type>
  </Character>
  <Character ID="Binah_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">請多多珍重自己的身體。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">哎呀……如此重逢真是令人感慨萬千。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">能夠與我並駕齊驅著實令人敬佩，然而還請保持謹慎。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……散裂吧。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">退下。此刻並非爾等的出場時機。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">看來她對你們而言仍太過危險。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">是呢。那孩子自然是無力阻擋的。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_3">尚未完全結束呢？</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">真是有趣。你從許久之前便懂得運用那種力量……</BattleDialog>
    </Type>
  </Character>
  <Character ID="Gebura_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">過去的……我啊。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">我最瞭解的人，也是最不熟悉的人。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">就算是過去也沒差。你們幾個，都清楚我的戰鬥方式吧？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">感覺真差。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……沒錯。那玩意兒的性能不容小覷。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">不要害怕。一定要相信自己，此役必勝。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">氣勢被壓倒就會落敗。不能一蹶不振。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">僅憑我們也可以做到。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">那副鎧甲。是為了守護大家而生……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">一定有突破的辦法。不要氣餒。</BattleDialog>
    </Type>
  </Character>
  <Character ID="Roland_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">昔日的殷紅迷霧……難以置信。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……真是蠻橫的怪力。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">果然無法匹敵……</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">還沒完呢。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">剩下的人也足夠了。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">……冷靜下來。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">難道剛剛只是熱身……</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>