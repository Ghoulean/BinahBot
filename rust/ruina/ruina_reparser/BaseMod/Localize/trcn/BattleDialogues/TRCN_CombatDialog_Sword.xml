<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>Sword</GroupName>
  <Character ID="kimsatgat">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">點燈，啟程。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">此地猶如金城湯池……務必攻破。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">一如既往，毅然出劍。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">正所謂同舟共濟，吾等理應守望相助。還望來日再會。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">百密一疏……吾難辭其咎。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">刀折矢盡……無能為力。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">……烏雲密佈，驟雨將臨。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">殘月照樓臺……惜哉，惜哉。</BattleDialog>
    </Type>
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">智者千慮，亦有一失。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">愚昧之輩。謹小慎微亦可置人於死地。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_2">老馬識歸途。</BattleDialog>
    </Type>
  </Character>

  <Character ID="sword">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">無論沸水烈火……不遑多讓。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">會在此地喪命亦是理所當然。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">呆立之人必敗無疑。</BattleDialog>
      <BattleDialog ID="START_BATTLE_3">三下兩下即可了結此事。</BattleDialog>
      <BattleDialog ID="START_BATTLE_4">像往常那樣出劍。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">我會告知鏽鏈。</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_1">他們與我們同船共命……應當給予幫助。</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_2">今天身體格外疲憊……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">鑄成大錯……</BattleDialog>
      <BattleDialog ID="DEATH_1">可恨……怎能錯失這種機會……</BattleDialog>
      <BattleDialog ID="DEATH_2">結果，被劍刃劃傷的……是我。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">陷入窘境了……</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">時刻將自身置於首位。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">坎坷之行就此結束，願你安息。</BattleDialog>
    </Type>
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">這傢伙想必也打累了。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">如此謹慎便無力規避刀劍。</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_2">你不該接下這一擊。</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>