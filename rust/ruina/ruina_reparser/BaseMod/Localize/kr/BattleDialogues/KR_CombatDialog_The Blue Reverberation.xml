  <Character ID="Gears">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">톱니가… 이끄는 대로…</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">어떻게 움직여야 할지… 알려주세요…</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">부디 제가 걸어갈 길을…!</BattleDialog>
      <BattleDialog ID="START_BATTLE_3">주어진 앞길을 걸어가면… 분명 승리할 수 있으리…</BattleDialog>
      <BattleDialog ID="START_BATTLE_4">머리를 열어 그 소리를 들어라…</BattleDialog>
      <BattleDialog ID="START_BATTLE_5">전투에 나설 준비가 되었습니다…</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">언제나 옳은 길로 이끄시니…</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_1">전투를 종료했습니다… 돌아가겠습니다…</BattleDialog>
      <BattleDialog ID="BATTLE_VICTORY_2">역시… 저희에게 꼭 필요한 존재입니다…</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">어째서… 저를 이런 곳으로…</BattleDialog>
      <BattleDialog ID="DEATH_1">이제 더 어떻게 해야 할지… 앞을 밝혀 주세요…</BattleDialog>
      <BattleDialog ID="DEATH_2">왜… 소리가 들리지 않습니까… 어둑하기만 합니까…</BattleDialog>
      <BattleDialog ID="DEATH_3">…톱니의 판단이… 틀릴 때도… 있습니까…</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">톱니가 안전히… 이끌어 줄 텐데… 뭐가 걱정입니까…</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">이것 또한 그분의… 뜻임을…</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">저분의 톱니에는 녹이 슬었던 걸까요…</BattleDialog>
    </Type>
    <Type ID="KILLS_OPPONENT">
      <BattleDialog ID="KILLS_OPPONENT_0">현명한… 선택이십니다…</BattleDialog>
      <BattleDialog ID="KILLS_OPPONENT_1">보세요… 선택이… 틀릴 리가… 없습니다…</BattleDialog>
