<?xml version="1.0" encoding="utf-8"?>
<BattleDialogRoot xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <GroupName>RedMist</GroupName>
  <Character ID="RedMist_MeetBinah">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……气氛不同寻常。怎么回事？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">这话说得，怎么，我们认识？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……绝对不是个善茬。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">……拜托了。更多能撕碎敌人的力量。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">该动真格的了。全部破坏……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">那种力量……奇点吗……？大意了……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……这地方怎会有操控那种力量的家伙？</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetGebura">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">……这他妈是啥？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">真是恶劣。刻意改变了外貌吗？</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">有本事就跟上我……</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……乍一看还挺像我的，不过就是个蹩脚的仿品罢了。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">现在才正要开始……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">无法遏止……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">妈的……统统砸烂……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">和我相仿的行动……你到底……</BattleDialog>
    </Type>
  </Character>
  <Character ID="RedMist_MeetRoland">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">你们就是要在试炼中消灭的敌人？</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">首先要摸清敌人的深浅……</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">你们也是收尾人？还是混帮派的？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">到头来你们也是一帮装模做样的家伙。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">原来如此……我已经摸透你们的实力了。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">……让我们好好看看彼此珍重的事物吧。</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_2">……！操，有破绽……</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">输给一帮莫名其妙的家伙……</BattleDialog>
    </Type>
  </Character>
  <Character ID="Binah_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">请多多珍重自己的身体。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">哎呀……如此重逢真是令人感慨万千。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">能够与我并驾齐驱着实令人敬佩，然而还请不要勉强唷。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……散裂吧。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">退下。此刻并非尔等的出场时机。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">仍是相当危险么。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">是呢。那孩子自然是无力阻挡的。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_3">尚未完全结束呢？</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">真是有趣。许久之前便懂得运用那种力量……</BattleDialog>
    </Type>
  </Character>
  <Character ID="Gebura_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">过去的……我啊。</BattleDialog>
      <BattleDialog ID="START_BATTLE_1">我最了解的人，也是最不熟悉的人。</BattleDialog>
      <BattleDialog ID="START_BATTLE_2">就算是过去也没差。你们几个，都清楚我的战斗方式吧？</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">有点儿不爽呢。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">……没错。那玩意儿的性能不容小觑。</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">不要害怕。一定要相信自己，此役必胜。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">气势被压倒就会落败。不能一蹶不振。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">我们也完全可以做到。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">那副铠甲。为了守护大家……</BattleDialog>
      <BattleDialog ID="SPECIAL_EVENT_1">一定有突破的办法。不要气馁。</BattleDialog>
    </Type>
  </Character>
  <Character ID="Roland_MeetRedMist">
    <Type ID="START_BATTLE">
      <BattleDialog ID="START_BATTLE_0">昔日的殷红迷雾……难以置信。</BattleDialog>
    </Type>
    <Type ID="BATTLE_VICTORY">
      <BattleDialog ID="BATTLE_VICTORY_0">……真是蛮横的怪力。</BattleDialog>
    </Type>
    <Type ID="DEATH">
      <BattleDialog ID="DEATH_0">果然无法匹敌……</BattleDialog>
    </Type>
    <Type ID="COLLEAGUE_DEATH">
      <BattleDialog ID="COLLEAGUE_DEATH_0">还没完呢。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_1">剩下的人也足够了。</BattleDialog>
      <BattleDialog ID="COLLEAGUE_DEATH_2">……冷静下来。</BattleDialog>
    </Type>
    <Type ID="SPECIAL_EVENT">
      <BattleDialog ID="SPECIAL_EVENT_0">难道她才刚刚热完身……</BattleDialog>
    </Type>
  </Character>
</BattleDialogRoot>